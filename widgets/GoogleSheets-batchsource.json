{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Google Sheets source",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Directory identifier",
          "name": "directoryIdentifier"
        }
      ]
    },
    {
      "label": "Filtering",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Filter",
          "name": "filter",
          "plugin-function": {
            "method": "POST",
            "widget": "getPropertyValue",
            "widget-attributes": {
              "label": "Get Schema Value"
            },
            "required-fields": ["path"],
            "missing-required-fields-message": "Please provide path field",
            "plugin-method": "getSheetsToPull"
          }
        },
        {
          "widget-type": "select",
          "label": "Modification date range",
          "name": "modificationDateRange",
          "widget-attributes": {
            "default": "today",
            "values": [
              "today",
              "yesterday",
              "this_week_sun_today",
              "this_week_mon_today",
              "last_week_sun_sat",
              "last_week_mon_sun",
              "this_month",
              "last_month",
              "this_quarter",
              "last_3d",
              "last_7d",
              "last_14d",
              "last_28d",
              "last_30d",
              "last_90d",
              "this_year",
              "last_year",
              "lifetime",
              "custom"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Start Date",
          "name": "startDate"
        },
        {
          "widget-type": "textbox",
          "label": "End Date",
          "name": "endDate"
        },
        {
          "name": "sheetsToPull",
          "widget-type": "select",
          "label": "Sheets to pull",
          "widget-attributes": {
            "default": "all",
            "values": ["all", "numbers", "titles"]
          }
        },
        {
          "name": "sheetsIdentifiers",
          "widget-type": "csv",
          "label": "Sheets identifiers",
          "widget-attributes": {
            "delimiter": ","
          }
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "Authentication type",
          "name": "authType",
          "widget-attributes": {
            "layout": "inline",
            "default": "oAuth2",
            "options": [
              {
                "id": "oAuth2",
                "label": "OAuth2"
              },
              {
                "id": "serviceAccount",
                "label": "Service account"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Account file path",
          "name": "accountFilePath",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Client ID",
          "name": "clientId"
        },
        {
          "widget-type": "textbox",
          "label": "Client secret",
          "name": "clientSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Refresh Token",
          "name": "refreshToken"
        }
      ]
    },
    {
      "label": "Retrying",
      "properties": [
        {
          "widget-type": "number",
          "label": "Max Retry Count",
          "name": "maxRetryCount",
          "widget-attributes": {
            "min": "0",
            "default": "10"
          }
        },
        {
          "widget-type": "number",
          "label": "Max Retry Wait",
          "name": "maxRetryWait",
          "widget-attributes": {
            "min": "0",
            "default": "500"
          }
        },
        {
          "widget-type": "number",
          "label": "Max Retry Jitter Wait",
          "name": "maxRetryJitterWait",
          "widget-attributes": {
            "min": "0",
            "default": "100"
          }
        }
      ]
    },
    {
      "label": "Metadata extraction",
      "properties": [

        {
          "widget-type": "toggle",
          "label": "Extract metadata",
          "name": "extractMetadata",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Metadata record name",
          "name": "metadataRecordName",
          "widget-attributes": {
            "default": "metadata"
          }
        },
        {
          "widget-type": "number",
          "label": "First header row",
          "name": "firstHeaderRow",
          "widget-attributes": {
            "default": "0",
            "min": "0"
          }
        },
        {
          "widget-type": "number",
          "label": "Last header row",
          "name": "lastHeaderRow",
          "widget-attributes": {
            "default": "0",
            "min": "0"
          }
        },
        {
          "widget-type": "number",
          "label": "First footer row",
          "name": "firstFooterRow",
          "widget-attributes": {
            "default": "0",
            "min": "0"
          }
        },
        {
          "widget-type": "number",
          "label": "Last footer row",
          "name": "lastFooterRow",
          "widget-attributes": {
            "default": "0",
            "min": "0"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Metadata cells",
          "name": "metadataCells",
          "widget-attributes": {
            "delimiter": ",",
            "kv-delimiter": ":"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "Text formatting",
          "name": "formatting",
          "widget-attributes": {
            "layout": "inline",
            "default": "valuesOnly",
            "options": [
              {
                "id": "valuesOnly",
                "label": "Values only"
              },
              {
                "id": "formattedValues",
                "label": "Formatted values"
              }
            ]
          }
        },
        {
          "widget-type": "toggle",
          "label": "Skip empty data",
          "name": "skipEmptyData",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "radio-group",
          "label": "Column Names Selection",
          "name": "columnNamesSelection",
          "widget-attributes": {
            "layout": "inline",
            "default": "firstRowAsColumns",
            "options": [
              {
                "id": "firstRowAsColumns",
                "label": "Treat first row as column names"
              },
              {
                "id": "customRowAsColumns",
                "label": "Custom row as column names"
              },
              {
                "id": "noColumnNames",
                "label": "No column names"
              }
            ]
          }
        },
        {
          "widget-type": "number",
          "label": "Custom row for column names",
          "name": "customColumnNamesRow",
          "widget-attributes": {
            "default": "1",
            "min": "1"
          }
        },
        {
          "widget-type": "number",
          "label": "Last data column",
          "name": "lastDataColumn",
          "widget-attributes": {
            "default": "26",
            "min": "0"
          }
        },
        {
          "widget-type": "number",
          "label": "Last data row",
          "name": "lastDataRow",
          "widget-attributes": {
            "default": "1000",
            "min": "0"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "widget-type": "non-editable-schema-editor",
      "schema": {
      }
    }
  ],
  "filters": [
    {
      "name": "Select modification date range",
      "condition": {
        "expression": "modificationDateRange == 'custom'"
      },
      "show": [
        {
          "name": "startDate",
          "type": "property"
        },
        {
          "name": "endDate",
          "type": "property"
        }
      ]
    },
    {
      "name": "Sheet numbers",
      "condition": {
        "expression": "sheetsToPull == 'numbers' || sheetsToPull == 'titles'"
      },
      "show": [
        {
          "name": "sheetsIdentifiers",
          "type": "property"
        }
      ]
    },
    {
      "name": "Authenticate with OAuth2",
      "condition": {
        "expression": "authType == 'oAuth2'"
      },
      "show": [
        {
          "name": "clientId",
          "type": "property"
        },
        {
          "name": "clientSecret",
          "type": "property"
        },
        {
          "name": "refreshToken",
          "type": "property"
        }
      ]
    },
    {
      "name": "Authenticate with service account",
      "condition": {
        "expression": "authType == 'serviceAccount'"
      },
      "show": [
        {
          "name": "accountFilePath",
          "type": "property"
        }
      ]
    },
    {
      "name": "Custom header filter",
      "condition": {
        "expression": "columnNamesSelection == 'customRowAsColumns'"
      },
      "show": [
        {
          "name": "customColumnNamesRow",
          "type": "property"
        }
      ]
    },
    {
      "name": "Extract metadata",
      "condition": {
        "expression": "extractMetadata == true"
      },
      "show": [
        {
          "name": "metadataRecordName",
          "type": "property"
        },
        {
          "name": "firstHeaderRow",
          "type": "property"
        },
        {
          "name": "lastHeaderRow",
          "type": "property"
        },
        {
          "name": "firstFooterRow",
          "type": "property"
        },
        {
          "name": "lastFooterRow",
          "type": "property"
        },
        {
          "name": "metadataCells",
          "type": "property"
        }
      ]
    }
  ]
}
