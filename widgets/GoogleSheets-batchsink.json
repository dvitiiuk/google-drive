{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Google Sheets sink",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Spreadsheet name field",
          "name": "schemaSpreadSheetNameFieldName"
        },
        {
          "widget-type": "textbox",
          "label": "Sheet name field",
          "name": "schemaSheetNameFieldName"
        },
        {
          "widget-type": "textbox",
          "label": "Directory identifier",
          "name": "directoryIdentifier"
        },
        {
          "widget-type": "textbox",
          "label": "Sheet name",
          "name": "sheetName",
          "widget-attributes": {
            "default": "Sheet 1"
          }
        },
        {
          "widget-type": "toggle",
          "label": "Write schema as first row",
          "name": "writeSchema",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "true"
          }
        },
        {
          "widget-type": "toggle",
          "label": "Merge data cells",
          "name": "mergeDataCells",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "Authentication type",
          "name": "authType",
          "widget-attributes": {
            "layout": "inline",
            "default": "oAuth2",
            "options": [
              {
                "id": "oAuth2",
                "label": "OAuth2"
              },
              {
                "id": "serviceAccount",
                "label": "Service account"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Account file path",
          "name": "accountFilePath",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Client ID",
          "name": "clientId"
        },
        {
          "widget-type": "textbox",
          "label": "Client secret",
          "name": "clientSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Refresh Token",
          "name": "refreshToken"
        }
      ]
    },
    {
      "label": "Retrying",
      "properties": [
        {
          "widget-type": "number",
          "label": "Max Retry Count",
          "name": "maxRetryCount",
          "widget-attributes": {
            "min": "0",
            "default": "10"
          }
        },
        {
          "widget-type": "number",
          "label": "Max Retry Wait",
          "name": "maxRetryWait",
          "widget-attributes": {
            "min": "0",
            "default": "500"
          }
        },
        {
          "widget-type": "number",
          "label": "Max Retry Jitter Wait",
          "name": "maxRetryJitterWait",
          "widget-attributes": {
            "min": "0",
            "default": "100"
          }
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "Authenticate with OAuth2",
      "condition": {
        "expression": "authType == 'oAuth2'"
      },
      "show": [
        {
          "name": "clientId",
          "type": "property"
        },
        {
          "name": "clientSecret",
          "type": "property"
        },
        {
          "name": "refreshToken",
          "type": "property"
        }
      ]
    },
    {
      "name": "Authenticate with service account",
      "condition": {
        "expression": "authType == 'serviceAccount'"
      },
      "show": [
        {
          "name": "accountFilePath",
          "type": "property"
        }
      ]
    }
  ]
}
