{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Google Drive sink",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "File body field",
          "name": "schemaBodyFieldName"
        },
        {
          "widget-type": "textbox",
          "label": "File name field",
          "name": "schemaNameFieldName"
        },
        {
          "widget-type": "textbox",
          "label": "File mime field",
          "name": "schemaMimeFieldName"
        },
        {
          "widget-type": "textbox",
          "label": "Directory identifier",
          "name": "directoryIdentifier"
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "Authentication type",
          "name": "authType",
          "widget-attributes": {
            "layout": "inline",
            "default": "oAuth2",
            "options": [
              {
                "id": "oAuth2",
                "label": "OAuth2"
              },
              {
                "id": "serviceAccount",
                "label": "Service account"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Account file path",
          "name": "accountFilePath",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Client ID",
          "name": "clientId"
        },
        {
          "widget-type": "textbox",
          "label": "Client secret",
          "name": "clientSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Refresh Token",
          "name": "refreshToken"
        }
      ]
    },
    {
      "label": "Retrying",
      "properties": [
        {
          "widget-type": "number",
          "label": "Max retry count",
          "name": "maxRetryCount",
          "widget-attributes": {
            "min": "0",
            "default": "8"
          }
        },
        {
          "widget-type": "number",
          "label": "Max retry wait",
          "name": "maxRetryWait",
          "widget-attributes": {
            "min": "0",
            "default": "200"
          }
        },
        {
          "widget-type": "number",
          "label": "Max retry jitter wait",
          "name": "maxRetryJitterWait",
          "widget-attributes": {
            "min": "0",
            "default": "100"
          }
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "Authenticate with OAuth2",
      "condition": {
        "expression": "authType == 'oAuth2'"
      },
      "show": [
        {
          "name": "clientId",
          "type": "property"
        },
        {
          "name": "clientSecret",
          "type": "property"
        },
        {
          "name": "refreshToken",
          "type": "property"
        }
      ]
    },
    {
      "name": "Authenticate with service account",
      "condition": {
        "expression": "authType == 'serviceAccount'"
      },
      "show": [
        {
          "name": "accountFilePath",
          "type": "property"
        }
      ]
    }
  ]
}
